<div class="row">
  <div class="col-md-10 mx-auto">
  <div>
    <h1><%= @cocktail.name %></h1>
  </div>

  <div>
    <h2>Doses</h2>
      <% @cocktail.doses.each do |dose| %>
    <li><%= dose.ingredient.name %> : <%=dose.description %> <%= link_to "Delete", dose_path(dose), method: :delete, class: "btn-primary" %></li>
    <% end %>
  </div>
    <div class="button">
    <%= link_to "Add Ingredient", cocktail_ingredients_path(@cocktail)%>
    <%= link_to 'Add new doses', cocktail_doses_path(@cocktail) %>
    <%= link_to "Remove", cocktail_path(@cocktail), method: :delete, data: {confirm: "Are you sure?"}, class: "btn-primary"  %>
    <%= link_to "Back", root_path %>
    </div>
  </div>
</div>
