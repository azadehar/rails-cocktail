<div class="banner" >
  <div class="banner-content">
    <h1>Cocktails</h1>
    <p>Awesome beverages for developers nightlife</p>
    <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('../assets/images/cocktail1.png')">
          <%=link_to cocktail.name, cocktail_path(cocktail)%>
        </div>
      </div>
    <% end %>
  </div>
</div>

